body{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 130px auto 130px;
    height:100vh;
    padding: 10px;
    grid-gap: 10px;
}

.header{
    background-color: aqua;
    grid-column-start: span 3;
    border-style: solid;
}

.aside{
    background-color:bisque;
    grid-column-start: span 1;
    border-style: solid;
}

.main{
    background-color:cadetblue;
    grid-column-start: span 2;
    border-style: solid;
}

.footer{
    background-color:rgba(0, 255, 255, 0.925);
    grid-column-start: span 3;
    border-style: solid;
}

.header h1{
    margin-left: 10px;
    font-style: oblique;
}

